@model WebAppPratelivros.Models.Leitor

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <title>Esqueci a senha - pratelivros</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/principal.css")" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;0,900;1,900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="main.js"></script>
</head>

<body class="flex justify-center items-center h-screen pattern-marrom">
    <div class="bg-form w-[50rem] h-[40rem] px-16 flex items-center">
        <div>
            <h2 class="text-white font-semibold text-4xl mt-2">Pratelivros</h2>
            <h2 class="text-white font-semibold text-4xl mt-2">Pra Ter Livros</h2>
            <h4 class="text-white font-semibold text-xl mt-4">O pratelivros™ te oferece tudo que precisa para encontrar ótimas opções de livros e economizar mais.</h4>
            <ul class="flex">
                <li class="mr-2 my-6">
                    <a href=""><img src="~/Content/imagens/icons/instagram-white-icon.svg" /></a>
                </li>
                <li class="mx-4 my-6">
                    <a href=""><img src="~/Content/imagens/icons/twitter-white-icon.svg" /></a>
                </li>
                <li class="mx-2 my-6">
                    <a href=""><img src="~/Content/imagens/icons/whatsapp-white-icon.svg" /></a>
                </li>
            </ul>
        </div>
    </div>
    <div class="flex flex-col justify-around w-[38rem] h-[40rem] bg-color1">
        <header class="flex justify-center m-4">
            <h1 class="flex justify-center">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/imagens/logo.png" width="150" /></a>
            </h1>
        </header>
        <main>
            <div class="flex flex-col items-center">
                <img class="self-center" src='~/Content/imagens/icons/usuario-icon.png' />
                <p class="font-semibold mt-2 w-[75%] text-center">
                    Confirme seus dados e nós enviaremos um e-mail para você redefinir sua senha!
                </p>
            </div>
            <div class="flex flex-col items-left m-4">
                @using (Html.BeginForm("redefinirSenha", "Leitor", FormMethod.Post, new { @class = "flex flex-col items-center" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-4/5 my-4 border-none", @placeholder = "E-mail", @type = "text" } })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "w-4/5 my-4 border-none", @placeholder = "Username", @type = "text" } })
                    <a class="mr-[21rem] hover:underline font-bold" href="@Url.Action("Login", "Leitor")">Retornar ao login</a>
                    <input class="hover:cursor-pointer" type="submit" value="Enviar e-mail" />
                }
                    <div class="flex flex-col items-center">
                        <p class="relative mb-[-0.7rem] bg-color1 px-2 font-semibold">ou</p>
                        <hr class="border-color2 border w-[10rem]" />
                        <p class="my-6">Não consegue redefinir a senha? <a class="hover:underline font-bold" href="@Url.Action("Cadastro", "Leitor")"><b>Criar nova conta</b></a></p>
                    </div>
                </div>
        </main>
    </div>
</body>

</html>