@model WebAppPratelivros.Models.Leitor

@{
    ViewBag.Title = "Cadastro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <title>pratelivros - Cadastro</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/principal.css")" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;0,900;1,900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="main.js"></script>
</head>

<body class="flex justify-center items-center h-screen pattern-marrom">
    <div class="bg-form w-[50rem] h-[45rem] px-16 flex items-center">
        <div>
            <h2 class="text-white font-semibold text-4xl mt-2 w-3/5">Troque seus livros com facilidade!</h2>
            <h4 class="text-white font-semibold text-xl mt-4 w-[29rem]">O pratelivros™ te oferece tudo que precisa para encontrar ótimas opções de livros e economizar mais.</h4>
            <ul class="flex">
                <li class="mr-2 my-6">
                    <a href=""><img src="~/Content/imagens/icons/instagram-white-icon.svg" /></a>
                </li>
                <li class="mx-4 my-6">
                    <a href=""><img src="~/Content/imagens/icons/twitter-white-icon.svg" /></a>
                </li>
                <li class="mx-2 my-6">
                    <a href=""><img src="~/Content/imagens/icons/whatsapp-white-icon.svg" /></a>
                </li>
            </ul>
        </div>
    </div>
    <div class="flex flex-col justify-around w-[38rem] h-[45rem] bg-color1">
        <header class="flex justify-center m-4">
            <h1 class="flex justify-center">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/imagens/logo.png" width="150" /></a>
            </h1>
        </header>
        <main>
            <div class="flex flex-col items-left m-4">
                @using (Html.BeginForm("Cadastro", "Leitor", FormMethod.Post, new { @class = "flex flex-col items-center" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "w-4/5 mb-3 border-none", @placeholder = "Nome", @type = "text" } })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "w-4/5 mb-3 border-none", @placeholder = "Username", @type = "text" } })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-4/5 mb-3 border-none", @placeholder = "E-mail", @type = "text" } })
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "w-4/5 mb-3 border-none", @placeholder = "Senha", @type = "password" } })
                    <div class="flex justify-between w-4/5 mt-2">
                        @Html.EditorFor(model => model.Celular, new { htmlAttributes = new { @class = "m-0 border-none cadastroInput w-[48%]", @placeholder = "Celular (opcional)", @type = "tel" } })
                        @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "m-0 cadastroInput border-none w-[48%]", @placeholder = "Data de nascimento", @type = "text", @onfocus = "this.type='date'", @onblur = "this.type='text'" } })
                    </div>
                    <div class="flex items-center mt-6">
                        <label class="radio mx-2 font-bold flex justify-center items-center">
                            @Html.RadioButtonFor(model => model.Genero, "M")
                            <span>Masculino</span>
                        </label>
                        <label class="radio mx-2 font-bold flex justify-center items-center">
                            @Html.RadioButtonFor(model => model.Genero, "F")
                            <span>Feminino</span>
                        </label>
                        <label class="radio mx-2 font-bold flex justify-center items-center">
                            @Html.RadioButtonFor(model => model.Genero, "O")
                            <span>Outro</span>
                        </label>
                    </div>
                    <input class="hover:cursor-pointer" type="submit" value="Continuar" />
                }
                @section ScriptPage {
                    <script src="~/Scripts/jquery.validate.min.js">
                    </script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.min.js">
                    </script>
                }
                <div class="flex flex-col items-center">
                    <p class="relative mb-[-0.7rem] bg-color1 px-2 font-semibold">ou</p>
                    <hr class="border-color2 border w-[10rem]" />
                    <p class="my-6">Já tem uma conta? <a class="hover:underline" href="@Url.Action("Login", "Leitor")"><b>Conecte-se</b></a></p>
                </div>
            </div>
        </main>
    </div>
</body>
</html>